<body>


  <h2><%=@correctalert %></h2>

  <div style="color:rgb(251, 255, 65)"><%=flash[:notice]%></div>

      </br>

    <h1> Password Checker </h1>

    <form action="/check_password" method="get">
      <label for= "user_name_id"> User Name: </label>
      <input type="text" id="user_name_id" name="userId" pattern="[A-Za-z]{6,}" title="Must contain at least one uppercase and lowercase letter, and at least 6 or more characters" style="width:100px; height:20px;" required />
      </br>
      </br>
      <!-- the name="guess" links to our instance variable @guess in game_controller.rb -->
      <label for="password"> Enter Password: </label>
      <input type="text" id="password" name="password" pattern="[A-Za-z!#$]{6,}" title="Must contain at least one uppercase and lowercase letter, !#$, and at least 6 or more characters" style="width:100px; height:20px;" required />
      </br>
      </br>

      <button id="button" type="submit" value="Submit">Submit</button>

    </form>

</body>
